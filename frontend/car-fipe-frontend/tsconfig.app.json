{
  "extends": "@vue/tsconfig/tsconfig.json",  // Usar o tsconfig para Vue 3
  "include": [
    "env.d.ts",
    "src/**/*.ts", 
    "src/**/*.d.ts", 
    "src/**/*.tsx", 
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,   // Permite arquivos JavaScript se necessário
    "jsx": "preserve"  // Caso você esteja usando JSX no Vue
  }
}
